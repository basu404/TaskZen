{
  "info": {
    "name": "FocusFlow API",
    "description": "FocusFlow backend API collection (Auth/Profile/Tasks).\n\nBase URL: {{baseUrl}}\nBearer token: {{token}}",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "taskId", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /api/health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/health"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /api/auth/register (stores token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.token) pm.collectionVariables.set('token', json.token);",
                  "if (json && json.user && json.user.id) pm.collectionVariables.set('userId', json.user.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Demo User\",\n  \"email\": \"demo@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "POST /api/auth/login (stores token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.token) pm.collectionVariables.set('token', json.token);",
                  "if (json && json.user && json.user.id) pm.collectionVariables.set('userId', json.user.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "GET /api/auth/profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/auth/profile"
          }
        },
        {
          "name": "PUT /api/auth/profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Demo User Updated\",\n  \"email\": \"demo@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/profile"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "GET /api/tasks (stores first taskId if present)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (Array.isArray(json) && json[0] && json[0]._id) pm.collectionVariables.set('taskId', json[0]._id);"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/tasks"
          }
        },
        {
          "name": "POST /api/tasks (create, stores taskId)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json._id) pm.collectionVariables.set('taskId', json._id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"First task\",\n  \"description\": \"Something important\",\n  \"priority\": \"high\",\n  \"dueDate\": \"2026-03-01T10:30:00.000Z\",\n  \"category\": \"Work\"\n}"
            },
            "url": "{{baseUrl}}/api/tasks"
          }
        },
        {
          "name": "PUT /api/tasks/:id (update)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated title\",\n  \"completed\": true\n}"
            },
            "url": "{{baseUrl}}/api/tasks/{{taskId}}"
          }
        },
        {
          "name": "DELETE /api/tasks/:id",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/tasks/{{taskId}}"
          }
        },
        {
          "name": "POST /api/tasks/reorder",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"taskOrders\": [\n    { \"id\": \"{{taskId}}\", \"order\": 0 }\n  ]\n}"
            },
            "url": "{{baseUrl}}/api/tasks/reorder"
          }
        }
      ]
    }
  ]
}
